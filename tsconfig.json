{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "src/main",
    "paths": {
      "main/*":[
        "src/main/*"
        ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
