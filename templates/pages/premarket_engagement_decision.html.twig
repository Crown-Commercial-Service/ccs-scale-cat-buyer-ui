{% extends 'base.html.twig' %}

{% block title %} {{ pageTitle }} {% endblock %}

{% block body %}

    <div class="flow-pages">
        <h1>Pre-market Engagement Decision Page</h1>
        <form action="{{ path('premarket_engagement_decision') }}" method="post">
        <div class="govuk-form-group" style="margin: 0 auto; width:20%; text-align:left;">
            <fieldset class="govuk-fieldset" aria-describedby="changed-name-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Make a decision
                    </h1>
                </legend>

                <div class="govuk-radios govuk-radios--inline">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="select-preMarket" name="preMarket" type="radio" value="pre-market">
                        <label class="govuk-label govuk-radios__label" for="changed-name">
                            Pre-market Engagement
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="changed-name-2" name="preMarket" type="radio" value="RFD">
                        <label class="govuk-label govuk-radios__label" for="changed-name-2">
                            RFP Decision
                        </label>
                    </div>
                </div>

            </fieldset>
        </div>
            <button type="submit" class="govuk-button" data-module="govuk-button">
                Save and continue
            </button>
        </form>
    </div>

{% endblock %}