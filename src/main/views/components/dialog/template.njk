<div class="backdrop-{{params.type}}">
  <div class="messagepop pop">
    <div class="pop_logo govuk-grid-column-full">
      <hidden id = "redirect-dialog" class="govuk-visually-hidden"></hidden>
      <p class="pop_logo_image govuk-grid-column-one-half"
      <a class="govuk-footer__link logo" href={{params.redirect}}>
        <img class="popup_image" src="/assets/images/CCS_WHITE_SML_AW.png" alt="Go to the CCS homepage">
      </a>
      </p>
      <p class="govuk-!-text-align-right govuk-grid-column-one-half dialog-close-{{params.type}} govuk-!-padding-top-6" id="dialog-close-div-{{params.type}}">
      <a href={{params.redirect}} class="dialog-close-{{params.type}} nav-list__link_secondary" id="dialog-close-{{params.type}}" aria-label="Close" role="button">X</a></p>
    </div>
    <div class="govuk-grid-column-full">
      <h1 aria-hidden="true" id="dialog-title">{{params.title}}</p></h1>
      <p id="dialog-description">{{params.description}}</p>
      <div class="govuk-button-group">
        <button id="redirect-button-{{params.type}}" class="button dialog-button govuk-button" aria-hidden="true">Continue</button>
        <a href={{params.redirect}} class="dialog-close-{{params.type}} govuk-link govuk-link--no-visited-state" aria-label="Cancel"  role="button" id="dialog-cancel-{{params.type}}" aria-hidden="true">Cancel</a>
      </div>
    </div>
  </div>
</div>