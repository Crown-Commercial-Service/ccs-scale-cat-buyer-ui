{% set primary =  menudata.primaryContents %}
{% set secondary =  menudata.secondaryContents %}


<header class="header-global header-global--home" >
   <div class="ccs-width-container">
      <div class="nav-wrapper">
         <a href="/" class="logo"><img src="/assets/images/CCS_WHITE_SML_AW.png" alt="Go to the CCS homepage">
         </a>
         <button class="global-navigation__toggler" data-toggler="nav">
            <span>Menu</span> 
            <span class="icon">
               <svg width="16" height="13" xmlns="http://www.w3.org/2000/svg">
                  <g stroke="currentColor" stroke-width="2" fill="none" fill-rule="evenodd" stroke-linecap="square">
                     <path d="M14.5 1.12H1.464M14.5 6.12H1.464M14.5 11.24H1.464"/>
                  </g>
               </svg>
            </span>
         </button>
         <nav class="global-navigation" data-toggle="nav" data-app-uri="http://www.crowncommercial.gov.uk/" data-app-pathinfo="/">
         <ul class="nav-list nav-list--personal">

         {% if Session['session'] %}
          <li class="nav-list__item"><a class="nav-list__link" href="/dashboard">My account</a></li>
           <li class="nav-list__item"><a class="nav-list__link" href="/oauth/logout">Sign out</a></li>
         {% else %}
          <li class="nav-list__item"><a class="nav-list__link" href="/oauth/login">Sign in</a></li>
         {% endif %}
          
        </ul>
            <ul class="nav-list nav-list--secondary">
             {% for item in secondary.data.items %}
              <li class="nav-list__item">
                  <a class="nav-list__link  " href="{{item.url}}">{{item.title}}</a>
               </li>
               {% endfor %}
            </ul>
            <ul class="nav-list nav-list--primary">
               {% for item in primary.data.items %}
               <li class="nav-list__item">
                  <a class="nav-list__link  " href="{{item.url}}">{{item.title}}</a>
               </li>            
               {% endfor %}
            </ul>
         </nav>
      </div>
   </div>
</header>
