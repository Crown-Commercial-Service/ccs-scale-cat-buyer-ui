{% extends "template.njk" %}



{% set title = 'Create a Request for Information (RFI)' %}

{% block breadCrumb %}
{{ CCSBreadcrumbs({
        items: [
          {
            text: "Home" ,
            href: "/home"
          },
          {
            text: "Contract award service",
            href: "/cAT"
          },
          {
            text: "How will you publish your RfI",
            href: "#"
          }
        ]
      }) }}
 {% endblock %}

{% block content %}
      <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
        {{data.title }}
        </h1>
        {% include "includes/project_header.njk" %}  
    </div>
</div>


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body-l">{{ data.form.question }}</p>
        <form id="ccs_rfi_type_form" name="ccs_rfi_type_form" class="form ccs_rfi_type_form" action="/add" method="POST">
            
      
      {{  data.form.radioOptions}}
           

            <div class="govuk-button-group">
                {{ CCSButton({
                text: "Save and continue"
                }) }}
                <a href="{{data.form.backJump.href}}" class="govuk-link govuk-link--no-visited-state">{{data.form.backJump.title}}</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}