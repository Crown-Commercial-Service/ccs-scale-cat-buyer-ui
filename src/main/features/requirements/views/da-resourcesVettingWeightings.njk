{% extends "template.njk" %}
{% from "components/releatedContent.njk" import CCSReleatedContent %}

{% block breadCrumb %}
  {{ CCSBreadcrumbs({
    items: breadCrumbs
  }) }}
{% endblock %}

{% block content %}
  <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

    {% if(isError)%}
      {{ CCSErrorSummary({
          titleText: "There is a problem",
          errorList: errorText
      }) }}
    {%endif %}
 <div class="govuk-grid-row">
    <h1 class="govuk-heading-xl">
        {{title}}
    </h1>
    <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">

        {% include "includes/project_header.njk" %}
      </div>
    </div>
    <form id="ccs_da_menu_tabs_form" name="ccs_da_menu_tabs_form" class="form ccs_da_menu_tabs_form" action="/da/team-scale" method="POST">
   
    <div class="ccs-page-section">
      <div class="sub-section">
        <p class="govuk-body">{{data.total}} of 100% total weighting for number of staff</p>
        <p class="govuk-body">{{data.total}} of 100% total weighting for related vetting requirement</p>
      </div>
       <div class="sub-section"><a href="2" class="del govuk-link govuk-link--no-visited-state" title="delete">Clear form</a></div>
    </div>
    <section class="ons-page__container ons-container">
        <div id="vertical_tab_nav" class="ons-grid ons-js-toc-container">
            <div class="ons-grid__col ons-grid__col--sticky@m ons-col-4@m">
                {{-
                    onsTableOfContents({
                        "title": null,
                        "ariaLabel": 'Sections in this page',
                        "itemsList": TableItems
                    })
                }}
            </div>
            <div class="ons-grid__col ons-col-7@m ons-push-1@m">

            {% for tr in designations %}
                <article id="section">
                    <h2 class="govuk-heading-xl govuk-!-font-weight-bold" >{{tr['job-category']}}</h2>
                    <h4> {{tr['job-category']}} description </h4>
       
                     {% for subItems in tr.data %}
                     <div class="govuk-!-margin-top-5">
                     <h2 class="govuk-heading-m">{{subItems.designation}}</h2>
                     <p> [DDAT Family description] </p>
                     <div class="govuk-!-margin-top-9">
                      <p> Weighting for number of staff </p>
                        {{ CCSInput({
                          label: {
                            text: ""
                          },
                          classes: "govuk-input--width-2",
                          id: "weight_staff",
                          name: "weight_staff",
                          suffix: {
                            text: "%"
                          },
                          spellcheck: false
                        }) }}
                       <p> Weighting for related vetting requirement </p>

                         {{ CCSInput({
                          label: {
                            text: ""
                          },
                          classes: "govuk-input--width-2",
                          id: "weight_vetting",
                          name: "weight_vetting",
                          suffix: {
                            text: "%"
                          },
                          spellcheck: false
                        }) }}

                     </div>

                      <div class="govuk-!-margin-top-9">
                      <p> Add quantity for the roles </p>
                      <div>
                       
                       <div>
                       <hr>
                     {% endfor %}
                     
                </article>
            {% endfor %}
            </div>
        </div>
    </section>
      <div class="govuk-button-group">
        {{ CCSButton({
              text: "Save and continue",
              classes:"save-button"
            })
        }}
        <a href="{{backJump.href}}" class="govuk-link govuk-link--no-visited-state">{{backJump.title}}</a>
      </div>
    </div>
      </form>
    <div class="govuk-grid-column-one-third">
      {{ CCSReleatedContent(releatedContent) }}
    </div>
    </div>

    </div>
  </main>
        {% endblock %}