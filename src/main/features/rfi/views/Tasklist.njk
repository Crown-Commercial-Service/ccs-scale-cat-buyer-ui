{% extends "template.njk" %}

{% set title = 'Create a Request for Information (RFI)' %}




{% block content %}
{{ CCSBreadcrumbs({
        items: [
          {
            text: "Home",
            href: "/home"
          },
          {
            text: "Contract award service",
            href: "/cAT"
          },
          {
            text: "RFI Task List",
            href: "#"
          }
        ]
      }) }}

      <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
        {{ data.title }}
        </h1>
        {% include "includes/project_header.njk" %}
    </div>

</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body-l">{{ data.form.question }}</p>
        <form id="ccs_rfi_type_form" name="ccs_rfi_type_form" class="form ccs_rfi_type_form" action="/add" method="POST">
            
      {# Server fetched information -> Array#}
      {{  data.form.radioOptions.items}}

       {{ CCSRadios({
                idPrefix: "ccs_rfi_type",
                name: "ccs_rfi_type",
                items: [
                  {
                    value: "all_online",
                    html: "<h3 class='govuk-heading-m'>Provide all information online</h3>",
                    hint: {
                      text: "The Procurement Portal will guide you in this process step-by-step. "
                    }
                  },
                  {
                    value: "all_offline",
                    html: "<h3 class='govuk-heading-m'>Complete a document offline</h3>",
                    hint: {
                      text: "You'll be able to download a template, fill it offline and resume the process when youâ€™re ready to upload it into the Portal. "
                    }
                  }
                ]

                
              }) }}
           

            <div class="govuk-button-group">
                {{ CCSButton({
                text: "Save and continue"
                }) }}
                <a href="{{data.form.backJump.href}}" class="govuk-link govuk-link--no-visited-state">{{data.form.backJump.title}}</a>
            </div>
        </form>
    </div>
</div>


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

    <ol class="app-task-list">

    {# This is the part i have written #}

    

    {% for item in data.events %}
         <li>
            <h2 class="app-task-list__section">
            <span class="app-task-list__section-number">{{item.eventno}} </span> {{item.eventTitle}}
             </h2>
              <ul class="app-task-list__items">
               {% for Tasks in item.eventTask %}
                <li class="app-task-list__item">
                        <span class="app-task-list__task-name">
                          <strong>
                            {% if Tasks.link !== undefined %}
                                <a href="name" aria-describedby="name-your-project">
                                    {{Tasks.title}}
                                </a>
                            {% else %}
                            {{Tasks.title}}
                            {% endif %} 
                          </strong>
                        </span>
                        {% if Tasks.status === "cannot start yet" %}
                        <strong class="govuk-tag govuk-tag--grey app-task-list__tag">{{Tasks.status}}</strong>
                        {% else %}
                        <strong class="govuk-tag app-task-list__tag" > {{Tasks.status}}</strong>
                        {% endif %} 
                    </li>
               {% endfor %}
                </ul>
             </li>
    {% endfor %}
    </ol>
    </div>
</div>

{% endblock %}