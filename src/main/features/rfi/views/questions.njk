{% extends "template.njk" %}


{% set title = 'Create a Request for Information (RFI)' %}


{% block breadCrumb %}

 {% endblock %}

{% block content %}
      <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
       {{data.description}}
        </h1>
      
    </div>
</div>



 <div class="govuk-grid-row">
 <div class="govuk-grid-column-two-thirds">
  {% include "includes/project_header.njk" %}  
 <p class="govuk-body-l">{{data.prompt}}</p><br><br><br>

  <form id="ccs_rfi_type_form" name="ccs_rfi_type_form" class="form ccs_rfi_type_form" action="/rfi/questionnaire?agreement_id={{agreement_id}}&path_view={{path_view}}&id={{id}}" method="post">
            {{ CCSRadios({
                idPrefix: "ccs_rfi_type",
                name: "ccs_rfi_type",
                items: [
                  {
                    value: "all_online",
                    html: "<h3 class='govuk-heading-m'>Provide all information online</h3>",
                    hint: {
                      text: "The Procurement Portal will guide you in this process step-by-step. "
                    }
                  },
                  {
                    value: "all_offline",
                    html: "<h3 class='govuk-heading-m'>Complete a document offline</h3>",
                    hint: {
                      text: "You'll be able to download a template, fill it offline and resume the process when youâ€™re ready to upload it into the Portal. "
                    }
                  }
                ]
              }) }}
      
              {{ CCSInput({
                id: "choose_rfi_type",
                name: "choose_rfi_type",
                type: "hidden",
                value: true
              }) }}
<br><br>
            <div class="govuk-button-group">
                {{ CCSButton({
                text: "Save and continue"
                }) }}
                <a href="/rfi/rfi-task-list" class="govuk-link govuk-link--no-visited-state">Return to Run pre-market engagement</a>
              </div>
        </form>


</div>
</div>

{% endblock %}

