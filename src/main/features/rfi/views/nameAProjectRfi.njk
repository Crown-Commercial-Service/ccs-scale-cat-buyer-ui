{% extends "template.njk" %}
{% from "components/releatedContent.njk" import CCSReleatedContent %}
{% from "macros/csrf.njk" import csrfProtection %}

{% set title = 'Name project | Contract Award Service' %}
{% set url -%}
  /projects/create-or-choose?lotId={{lotId}}&agreementLotName={{agreementLotName}}
{%- endset %}

{% block breadCrumb %}
{{ CCSBreadcrumbs({
    items: [
        {
            "text": "Your dashboard",
            "href": "/dashboard"
        },
        {
            "text": "Choose a commericial agreement",
            "href": "/projects/choose-agreement"
        },
        {
            "text": "Procurement overview",
            "href": url
        },
        {
          "text": "Do pre-market engagement",
          "href": "/rfi/rfi-tasklist"
        },
        {
          "text": "Name your project",
          "href": "#"
        }
    ]
      }) }}
{% endblock %}

{% block content %}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
{% if(error) %}

{{ CCSErrorSummary({
  titleText: "There is a problem",
  errorList: [
    {
      text: "Your project must have a name."
    }
  ]
}) }}
{%endif %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">
     {{data.title }}
    </h1>
  </div>
</div>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
     {% include "includes/project_header.njk" %}
   <div class="govuk-inset-text">
        <p class="govuk-body">Your unique project ID is <strong>{{projectLongName}}</strong></p><p class="govuk-body">You should include this ID in any correspondence with CCS. </p>
      </div>
      <p class="govuk-body">{{data.caption}} <br/>If you don't want to change the name of your project you can <a href="/rfi/rfi-tasklist" class="govuk-link govuk-link--no-visited-state">return to do pre-market engagement</a></p>
      <label for="{{data.form.input.id}}" class="govuk-visually-hidden">{{data.caption}}</label>
      <form id="ccs_rfi_project_name_form" name="ccs_rfi_project_name_form" action="/rfi/name?procid={{procId}}" method="POST">       
          {{ csrfProtection(csrf) }}
        {{ CCSInput({           
            id: data.form.input.id,
            name: data.form.input.name,
            value: projectLongName,
            maxlength:"500"
            })
        }}
         <p><label class="remaining_chrs_term" id="rfi_label_name_project">You have {{(500-(projectLongName | length))}}
          <div class="govuk-button-group">
            {{ CCSButton({
                text: "Save and continue",
                action:"submit"
                })
            }}
            <a href="{{data.form.backJump.href}}" class="govuk-link govuk-link--no-visited-state">{{data.form.backJump.title}}</a>             
          </div>
      </form>
 </div>
      <div class="govuk-grid-column-one-third">
        {{ CCSReleatedContent(releatedContent) }}
      </div>
   </div>
  </main>

























{% endblock %}