{% extends "template.njk" %}

{% set title = 'Provide information online | Contract a Thing' %}
{% set url -%}
  /projects/create-or-choose?lotId={{lotId}}&agreementLotName={{agreementLotName}}
{%- endset %}
{% block breadCrumb %}
    {{ CCSBreadcrumbs({
          items:[
        {
            text: "Dashboard",
            href: "/"
        },
        {
            text: "Choose a commericial agreement",
            href: "/projects/choose-agreement"
        },
        {
            text: "Procurement overview",
            href: url
        },
        {
          text: "Do pre-market engagement",
          href: "/rfi/rfi-tasklist"
        },
        {
          text: "Build your RfI",
          href: "#"
      }

    ]
        }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl">{{file_data.title }}</h1>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
        {% include "includes/project_header.njk" %}
            <ul class="app-task-list">
                {% for items in data %}

                    <li class="app-task-list__item">
                        <span class="app-task-list__task-name">
                            <strong>{{items.OCDS.description}}</strong>
                        </span>
                        {% set hreflink = items.OCDS.description | replace(" ", "_") %}
                        {% set criterion_id = items.id | replace(" ", "_") %}
                        <a class="app-task-list__tag" href="/rfi/questions?agreement_id={{agreement_id}}&proc_id={{proc_id}}&event_id={{event_id}}&id={{items.criterianId}}&group_id={{items.OCDS.id}}" aria-describedby="rfi-questions">{{items.nonOCDS.task}}</a>
                    </li>

                {% endfor %}

            </ul>
            <br>
            <br>
            <p class="govuk-body">
                <a href="{{data.backJump.href }}" class="govuk-link govuk-link--no-visited-state">{{data.backJump.title }}</a>
            </p>
        </div>
        <div class="govuk-grid-column-one-third">
            <div class="ccs-callout-panel">
                <h2 class="govuk-heading-m">{{relatedTitle}}</h2>
                <p class="govuk-body">
                    <a class="govuk-link govuk-link--no-visited-state" href={{ lotURL | safe }} target="_blank">{{lotText}}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}