{% extends "template.njk" %}
{% from "macros/csrf.njk" import csrfProtection %}
{% from "components/support/macro.njk" import howToGetSupport %}

{% set title = 'Edit a question and clerification' %}

{% set sortedMembers = [
  {
    value: "",
    text: "Please select"
  }
] %}
{% block breadCrumb %}
  {{ CCSBreadcrumbs({
        items:[
    {
      "text": "Dashboard",
      "href": "/dashboard"
    },
    {
      "text": eventId+" / "+eventType,
      "href": "/event/management?id="+eventId
    },
    {
      "text": "Message",
      "href": "#"
    }
  ]
    }) }}
{% endblock %}

{% block content %}
  <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

    {% if (validationError) %}

      {{ CCSErrorSummary({
  titleText: "There is a problem",
  errorList: errorText
}) }}
    {%endif %}
    <div class="govuk-grid-row govuk-!-padding-bottom-7">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
          <strong>Edit a question and clarification </strong>
        </h1>
        <p class="govuk-body">
          <strong>Event Id / Name : {{eventId | upper}} / {{eventType}}</strong>
        </p>
        {% include "includes/project_header.njk" %}
      </div>
    </div>

    <div class="govuk-grid-row messaging-navigation">
      <div class="govuk-grid-column-full">
        <nav class="global-navigation" data-toggle="nav" data-app-uri="http://www.crowncommercial.gov.uk/" data-app-pathinfo="/">

            <ul class="nav-list messaging-nav-list--primary">
                        <li class="nav-list__item">
                            <a class="nav-list__link " href="{{data.tabs.href1}}?type=create">{{data.tabs.text1}}</a>
                        </li>
                        <li class="nav-list__item selected">
                            {{data.tabs.text2}}
                        </li>
                        <li class="nav-list__item">
                            <a class="nav-list__link " href="{{data.tabs.href3}}?type=sent">{{data.tabs.text3}}</a>
                        </li>
                    </ul>
        </nav>
      </div>
    </div>
    <form id="ccs_message_qa_Add_ClerificationQs_form" name="ccs_message_qa_Add_ClerificationQs_form" action="/event/qa-edit" method="POST">
     {{ csrfProtection(csrf) }}
     <input type="hidden" name="qa_edit_id" id="qa_edit_id" value="{{QA.id}}">
      <div class="govuk-grid-row govuk-!-margin-bottom-6 govuk-!-margin-top-6 ccs-page-section">
        <div class="govuk-grid-column-full">
          <div class="govuk-grid-column-two-thirds">
          <a href="/event/qa-add?id={{message.OCDS.id}}">Back</a></br></br></br>
          <h2 class="govuk-heading-m">Message from {{message.OCDS.author.name}}</h2>
          <p class="govuk-body ">Classification: <strong>{{message.nonOCDS.classification}}</strong></p>
          <p class="govuk-body ">Date: <strong>{{message.OCDS.date | dateddmmyyyy}}</strong></p>
           </br>
          <label class="govuk-label"></label></br>
          <p class="govuk-body ">Subject: {{message.OCDS.title}}</p>
          <p class="govuk-body ">Message : {{message.OCDS.description }}</p>
        

            <h2 class="govuk-heading-m">Edit and publish the question and clarification</h2>
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="5000">
               Question
               {% if QaContent.IsquestionNotDefined %}
                <div class="govuk-form-group govuk-form-group--error">
                 <span id="message_QA_Edit_Question_input-error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> 
                  {{QaContent.questionErrorMessage}}
              </span>
                  <textarea class="govuk-textarea govuk-textarea--error1 govuk-js-character-count" id="message_QA_Edit_Question_input" name="message_QA_Edit_Question_input" rows="5" aria-describedby="create_message_input-info create_message_input-hint message_QA_Edit_Question_input-error"></textarea>
                </div>
              {% else %}
                <div class="govuk-form-group">
               <textarea value="{{QA.question}}" class="govuk-textarea govuk-js-character-count" id="message_QA_Edit_Question_input" name="message_QA_Edit_Question_input" rows="5" aria-describedby="create_message_input-info create_message_input-hint">{{QA.question}}</textarea>
                </div>
              {% endif %}
              <p><label id="message_QA_Edit_Question_input_count"></label></p>
             </div>
              
 <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="5000">
             Clarification
               {% if QaContent.IsclarificationNotDefined %}
                <div class="govuk-form-group govuk-form-group--error">
                 <p id="message_QA_Edit_Answer_input-error" class="govuk-error-message">
                    <span class="govuk-visually-hidden">Error:</span>
                    {{QaContent.clarificationErrorMessage}}
                 </p>
                  <textarea class="govuk-textarea govuk-textarea--error1 govuk-js-character-count" id="message_QA_Edit_Answer_input" name="message_QA_Edit_Answer_input" rows="5" aria-describedby="create_message_input-info create_message_input-hint message_QA_Edit_Answer_input-error"></textarea>
                </div>
              {% else %}
                <div class="govuk-form-group">
               <textarea  value="{{QA.answer}}" class="govuk-textarea govuk-js-character-count" id="message_QA_Edit_Answer_input" name="message_QA_Edit_Answer_input" rows="5" aria-describedby="create_message_input-info create_message_input-hint">{{QA.answer}}</textarea>
                </div>
              {% endif %}
                <p><label id="message_QA_Edit_Answer_input_count"></label></p>
               </div>


           
            <div class="govuk-button-group">
              {{ CCSButton({
                text: "Publish Changes",
                action:"submit"
                })
                }}
              <a href="/event/qa-add?id={{message.OCDS.id}}" class="govuk-link govuk-link--no-visited-state">Cancel</a>
            </div>

          </div>
        </div>
      </div>
    </form>
    <p class="govuk-body">
      <a href="/event/management?id={{eventId}}" class="govuk-link govuk-link--no-visited-state">{{data.backJump.title}}</a>
    </p>
  </main>
{% endblock %}