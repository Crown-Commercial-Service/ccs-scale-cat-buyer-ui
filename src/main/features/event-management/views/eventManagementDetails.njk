{% extends "template.njk" %}
{% from "macros/csrf.njk" import csrfProtection %}
{% from "components/support/macro.njk" import howToGetSupport %}

{% set title = 'Supplier message ' %}
{% block breadCrumb %}
  {{ CCSBreadcrumbs({
        items:[
    {
      "text": "Dashboard",
      "href": "/dashboard"
    },
    {
      "text": eventId+" / "+eventType,
      "href": "/event/management?id="+eventId
    },
    {
      "text": "Supplier message",
      "href": "#"
    }
  ]
    }) }}
{% endblock %}
{% block content %}
  <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    {% if (error) %}
      {{ CCSErrorSummary({
    titleText: "There is a problem",
    errorList: [
        {
        text: "Please select an option"
        }
    ]
    }) }}
    {%endif %}
    <strong class="govuk-tag govuk-tag--yellow govuk-!-margin-top-4 govuk-!-margin-bottom-2">Page Work in progress</strong>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
          {{data.title}}
        </h1>
        <p class="govuk-body">
          <strong>Event Id / Name : {{eventId | upper}} / {{eventType}}</strong>
        </p>
        {% include "includes/project_header.njk" %}
      </div>
    </div>
    <div class="govuk-grid-row ccs-page-section">
      <div class="govuk-grid-column-full">
        <p class="govuk-!-padding-bottom-9">
          {{data.subtitle}}
        </p>
        <div>
          <div class="govuk-grid-row messaging-navigation">
            <div class="govuk-grid-column-full">
              <nav class="global-navigation" data-toggle="nav" data-app-uri="http://www.crowncommercial.gov.uk/" data-app-pathinfo="/">

                <ul class="nav-list messaging-nav-list--primary">
                  <li class="nav-list__item">
                    <a class="nav-list__link" href="{{data.tabs.href1}}">{{data.tabs.text1}}</a>
                  </li>
                  <li class="nav-list__item">
                    <a class="nav-list__link" href="{{data.tabs.href2}}">{{data.tabs.text2}}</a>
                  </li>
                  <li class="nav-list__item">
                    <a class="nav-list__link " href="{{data.tabs.href3}}">{{data.tabs.text3}}</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
          <form id="event_supplier_message_form" name="event_supplier_message_form" class="form event_supplier_message_form" action="/message/details" method="POST">
            {{ csrfProtection(csrf) }}
            <a href="{{data.backlink}}" class="govuk-back-link">Back</a>
            <label class="govuk-label govuk-label govuk-label--m">{{messageDetails.OCDS.title}}</label>
            <p class="govuk-body">{{data.line1}} : {{messageDetails.nonOCDS.classification}}</p>
            <p class="govuk-body">{{data.line2}} : {{messageDetails.OCDS.date | date}}</p>
            <p class="govuk-body">
              {% for attachemnt in messageDetails.nonOCDS.attachments%}
                <a class="nav-list__link " href="/message/details?attachmentId={{attachemnt.id}}">{{attachemnt.name}}</a>
              {% endfor %}
            </p>
            <p class="govuk-body">{{messageDetails.OCDS.description }}</p>
            <div class="govuk-button-group">
              {{ CCSButton({
                text: "Save and continue",
                classes: "close-event"
                }) }}
              <a href="{{data.backJump.href}}" class="govuk-link govuk-link--no-visited-state">{{data.backJump.title}}</a>
              <a href="{{data.backJump2.href}}" class="govuk-link govuk-link--no-visited-state">{{data.backJump2.title}}</a>
            </div>
          </form>
        </div>
      </div>
    </div>

  </main>
{% endblock %}